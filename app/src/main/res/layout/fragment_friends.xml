<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.abubakernazir.emirateswalktheglobe.FriendsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/activity_vertical_margin"
        >

    </LinearLayout>


    <!-- Session two starts here -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:weightSum="1">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:layout_weight="0.82">


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#6aa41c"

      android:text="Friends"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#ffffff"
       android:paddingLeft="@dimen/activity_horizontal_margin"
       android:text="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6aa41c"
            android:paddingLeft="50dp"
            android:text="Request(s)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="50dp"
            android:text="0"
            android:id="@+id/textView" />
</LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:id="@+id/btnaddfriend"
            android:src="@mipmap/icon_addfriends" />
    </LinearLayout>
    <!-- Session two Ends here -->

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="RECENT ADDED FRIENDS"
      android:padding="@dimen/activity_vertical_margin"
      android:textColor="#ffffff"
      />

    <!-- Session three starts here  -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recentfriends_recyle"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
-->
</LinearLayout>
    <!-- Session three ends here -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALL FRIENDS"
        android:padding="@dimen/activity_vertical_margin"
        android:textColor="#ffffff"
        />

    <!-- Session four starts here -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_allfriends_recyle"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
-->
</LinearLayout>
<!-- Session four ends here -->


</LinearLayout>

</ScrollView>